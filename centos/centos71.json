{
    "push": {
      "name": "",
      "vcs": true
    },
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}",
        "cm": "nocm",
        "cm_version": "",
        "file_name": "centos71-base",
        "headless": "",
        "iso_checksum": "1795184136b8bdddabe50453cc2cc2d46f0f7c5e",
        "iso_name": "CentOS-7-x86_64-DVD-1503-01.iso",
        "iso_path": "iso",
        "iso_url": "http://mirrors.sonic.net/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "ssh_port": "22",
        "version": "0.1.0"
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "script/fix-slow-dns.sh",
                "script/sshd.sh",
                "script/update.sh",
                "script/vagrant.sh",
                "script/vmtool.sh",
                "script/cmtool.sh",
                "script/cleanup.sh"
            ],
            "override": {
                "parallels-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "virtualbox-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "vmware-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        }
    ],
    "builders": [
        {
          "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
          ],
          "disk_size": 65536,
          "guest_os_type": "centos-64",
          "http_directory": "http",
          "iso_checksum": "{{ user `iso_checksum` }}",
          "iso_checksum_type": "sha1",
          "iso_urls": [
            "{{ user `iso_path` }}/{{ user `iso_name` }}",
            "{{ user `iso_url` }}"
          ],
          "parallels_tools_flavor": "lin",
          "prlctl": [
            [
              "set",
              "{{.Name}}",
              "--memsize",
              "512"
            ],
            [
              "set",
              "{{.Name}}",
              "--cpus",
              "1"
            ]
          ],
          "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
          "ssh_password": "{{ user `ssh_password` }}",
          "ssh_username": "{{ user `ssh_username` }}",
          "ssh_wait_timeout": "10000s",
          "type": "parallels-iso",
          "vm_name": "centos71"
        },
        {
          "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
          ],
          "disk_size": 65536,
          "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
          "guest_os_type": "RedHat_64",
          "hard_drive_interface": "sata",
          "headless": "{{ user `headless` }}",
          "http_directory": "http",
          "iso_checksum": "{{ user `iso_checksum` }}",
          "iso_checksum_type": "sha1",
          "iso_urls": [
            "{{ user `iso_path` }}/{{ user `iso_name` }}",
            "{{ user `iso_url` }}"
          ],
          "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
          "ssh_password": "{{ user `ssh_password` }}",
          "ssh_username": "{{ user `ssh_username` }}",
          "ssh_port": "{{ user `ssh_port` }}",
          "ssh_wait_timeout": "10000s",
          "type": "virtualbox-iso",
          "vboxmanage": [
            [
              "modifyvm",
              "{{.Name}}",
              "--memory",
              "512"
            ],
            [
              "modifyvm",
              "{{.Name}}",
              "--cpus",
              "1"
            ]
          ],
          "virtualbox_version_file": ".vbox_version",
          "vm_name": "{{user `file_name`}}"
        },
        {
          "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
          ],
          "disk_size": 65536,
          "floppy_files": [
            "floppy/vmware9.compat_dcache.h.patch"
          ],
          "guest_os_type": "centos-64",
          "headless": "{{ user `headless` }}",
          "http_directory": "http",
          "iso_checksum": "{{ user `iso_checksum` }}",
          "iso_checksum_type": "sha1",
          "iso_urls": [
            "{{ user `iso_path` }}/{{ user `iso_name` }}",
            "{{ user `iso_url` }}"
          ],
          "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
          "ssh_password": "{{ user `ssh_password` }}",
          "ssh_username": "{{ user `ssh_username` }}",
          "ssh_wait_timeout": "10000s",
          "tools_upload_flavor": "linux",
          "type": "vmware-iso",
          "vm_name": "centos71",
          "vmx_data": {
            "cpuid.coresPerSocket": "1",
            "memsize": "512",
            "numvcpus": "1"
          }
        }
    ],
    "post-processors": [
        [{
            "type": "vagrant",
            "keep_input_artifact": false,
        },
        {
            "type": "vagrant",
            "only": ["parallels-iso"],
            "keep_input_artifact": false,
            "output": "box/{{.Provider}}/{{user `file_name`}}-{{user `cm`}}{{user `cm_version`}}-{{user `version`}}.box"
        },
        {
            "type": "atlas",
            "only": ["vmware-iso"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "vmware_desktop",
                "version": "0.0.1"
            }
        },
        {
            "type": "atlas",
            "only": ["virtualbox-iso"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "virtualbox",
                "version": "0.0.1"
            }
        }]
    ]
}